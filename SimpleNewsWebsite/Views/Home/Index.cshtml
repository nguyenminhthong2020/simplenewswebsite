@{
    ViewBag.Title = "Trang chủ";
}
<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/slider/p1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/slider/p2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/slider/p3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<div class="container-fluid news">
    <div class="container">
        Tin tức mới
    </div>
</div>
<div class="container" style="margin-bottom: 60px;">
    <div class="row align-items-start">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <a asp-controller="Post"
                   asp-action="Detail"
                   asp-route-id="1">
                    <img src="~/img/h1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Tiêu đề tin tức 1</h5>
                    </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <a asp-controller="Post"
                   asp-action="Detail"
                   asp-route-id="2">
                    <img src="~/img/h2.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Tiêu đề tin tức 2</h5>
                    </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="~/img/h3.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Tiêu đề tin tức 3</h5>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="~/img/h4.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Tiêu đề tin tức 4</h5>
                </div>
            </div>
        </div>
    </div>

    @section CSS{
        <link href="~/css/index.css" rel="stylesheet" />
    }
