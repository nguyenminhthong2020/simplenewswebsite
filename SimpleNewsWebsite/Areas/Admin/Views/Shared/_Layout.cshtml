@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <partial name="_CSSPartial" />
    @RenderSection("CSS", required: false)
</head>
<body>
    <header class="container-fluid d-flex justify-content-between">
        <div class="header-left">
            CMS Admin
        </div>
        <div class="header-right">
            <u>
                @(ViewBag.Title == "Trang đăng nhập" ? "" : @Context.Session.GetString("Username"))
            </u>
        </div>
    </header>
    <main class="container-fluid">
        <div class="row">
            <div class="col-md-2" id="leftNavbarWeb">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link@(ViewBag.PageCode==1?" active":"")"
                                       asp-area="Admin"
                                       asp-controller="Home"
                                       asp-action="Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="collapse" href="#collapseExample">
                                        <span id="baiviet">
                                            Bài viết&nbsp; &nbsp;&nbsp;&nbsp;
                                            <i class="bi bi-chevron-down"></i>
                                        </span>
                                    </a>
                                    <div class="collapse show" id="collapseExample" style="">
                                        <ul class="nav flex-column sub-menu">
                                            <li class="nav-item">
                                                <a class="nav-link@(ViewBag.PageCode==2?" active":"")"
                                                   asp-area="Admin"
                                                   asp-controller="Category"
                                                   asp-action="Category">&nbsp; &nbsp;&nbsp;&nbsp;Danh mục</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link@(ViewBag.PageCode==3?" active":"")"
                                                   asp-area="Admin"
                                                   asp-controller="Post"
                                                   asp-action="ListPosts">&nbsp; &nbsp;&nbsp;&nbsp;DS Bài viết</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link@(ViewBag.PageCode==4?" active":"")"
                                                   asp-area="Admin"
                                                   asp-controller="Post"
                                                   asp-action="EditPost">&nbsp; &nbsp;&nbsp;&nbsp;Thêm bài viết</a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Slider</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Logo</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Cấu hình</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div id="leftNavbarPhone">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="collapse" href="#collapseExample">
                                        <span id="baiviet">
                                            Bài viết&nbsp; &nbsp;&nbsp;&nbsp;
                                            <i class="bi bi-chevron-down"></i>
                                        </span>
                                    </a>
                                    <div class="collapse" id="collapseExample" style="">
                                        <ul class="nav flex-column sub-menu">
                                            <li class="nav-item">
                                                <a class="nav-link"
                                                   asp-controller="Category"
                                                   asp-action="Category">&nbsp; &nbsp;&nbsp;&nbsp;Danh mục</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link"
                                                   asp-controller="Post"
                                                   asp-action="ListPosts">&nbsp; &nbsp;&nbsp;&nbsp;DS Bài viết</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link"
                                                   asp-controller="Post"
                                                   asp-action="EditPost">&nbsp; &nbsp;&nbsp;&nbsp;DS Bài viết</a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Slider</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Logo</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Cấu hình</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-md-10 col-sm-12">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer class="container-fluid">
        &copy; Footer - Nguyễn Minh Thông
    </footer>
    <partial name="_JSPartial" />
    @RenderSection("JS", required: false)
</body>
</html>
