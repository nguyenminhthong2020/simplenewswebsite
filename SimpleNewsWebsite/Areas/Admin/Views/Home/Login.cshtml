@{
    ViewBag.Title = "Trang đăng nhập";
    ViewBag.TextLogin = "";
}

@model SimpleNewsWebsite.Areas.Admin.Controllers.HomeController.UserValidation

<div>
    <p>
        Trang login nè
    </p>
    <br /><br /><br />
    <div class="text-danger text-center">@ViewBag.message</span></div>
    <br /><br />
    <div id="formlogin">
        <form asp-area="Admin" asp-controller="Home" asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="@Model.username" class="form-label"></label>
                <input asp-for="@Model.username" name="username" type="text" class="form-control" id="username" placeholder="Nhập username">
                <div><span asp-validation-for="@Model.username" class="text-danger"></span></div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.password" class="form-label"></label>
                <input asp-for="@Model.password" name="password" type="password" class="form-control" id="password">
                <div><span asp-validation-for="@Model.password" class="text-danger"></span></div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </div>
        </form>
    </div>

</div>


