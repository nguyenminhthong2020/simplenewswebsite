@{
    ViewBag.Title = "Trang editpost";
    ViewBag.TextLogin = "Admin đang đăng nhập";
}

@model SimpleNewsWebsite.Areas.Admin.Models.ListCategoryViewModel;

<div>
    <p>
        Trang editpost nè
    </p>
</div>
<br />
<br />
<br />
<form asp-controller="Post" asp-action="EditPost" method="post" enctype="multipart/form-data">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-4">
                <img src="" alt="Alternate Text" class="form-control" />
                <input type="file" id="profile_pic" name="profile_pic"
                       accept=".jpg, .jpeg, .png" class="form-control">
            </div>
            <div class="col-sm-12 col-md-8">
                <input name="query" type="text" class="form-control" id="query" placeholder="Nhập tiêu đề bài viết">
                <br />
                <textarea rows="4" id="brief" class="form-control">
                </textarea>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-12 col-md-3">
                <input name="query" type="text" id="query" placeholder="Nhập từ khóa" class="form-control">
            </div><br />
            <div class="col-sm-12 col-md-3"><select asp-for="ListCategory" asp-items="Model.Categories" class="form-control"></select></div><br />
            <div class="col-sm-12 col-md-3">
                <select class="form-select form-control" name="catStatus" id="catStatus">
                    <option selected>Chọn trạng thái</option>
                    <option value="0">Ẩn</option>
                    <option value="1">Hiện</option>
                </select>
            </div><br />
            <div class="col-sm-12 col-md-3"><button type="submit" class="btn btn-primary">Thêm/Cập nhật</button></div>
        </div>
        <br /><br />
        Nhập nội dung <br />
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <textarea id="content">
                    </textarea>
            </div>
        </div>
    </div>
</form>
<br />
<br />
<br />
<br />
@section CSS{
    <link href="~/admin/css/editpost.css" rel="stylesheet" />
}

@section JS{
    <script src="~/admin/vendor/ckeditor/build/ckeditor.js"></script>
    <script src="~/admin/js/editpost.js"></script>
}
